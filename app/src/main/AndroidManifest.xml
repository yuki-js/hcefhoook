<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NFC Permission -->
    <uses-permission android:name="android.permission.NFC" />
    
    <!-- For reading system state -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.HcefHook">
        
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Log receiver for hook notifications -->
        <receiver
            android:name=".core.LogReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="app.aoki.yuki.hcefhook.LOG_ENTRY" />
                <action android:name="app.aoki.yuki.hcefhook.SENSF_DETECTED" />
                <action android:name="app.aoki.yuki.hcefhook.POLLING_FRAME" />
            </intent-filter>
        </receiver>
        
        <!--
            HCE-F Observe Mode Service
            
            This is the CORRECT way to implement Observe Mode in Android 15+.
            
            HOW IT WORKS:
            - Service extends HostNfcFService
            - Declares polling-loop-filter in XML meta-data
            - System automatically enables Observe Mode when service is foreground
            - onPollingLoopDetected() receives polling frames (including SENSF_REQ SC=FFFF)
            - eSE is silenced - no automatic response
            
            NO XPOSED HOOKS NEEDED FOR OBSERVE MODE!
            
            Reference: android-observe-mode-demo, Android 15 HCE documentation
        -->
        <service
            android:name=".nfc.HcefObserveModeService"
            android:exported="true"
            android:permission="android.permission.BIND_NFC_SERVICE">
            <intent-filter>
                <action android:name="android.nfc.cardemulation.action.HOST_NFCF_SERVICE" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.cardemulation.host_nfcf_service"
                android:resource="@xml/hcef_observe_mode_service" />
        </service>

        <!-- Xposed Module Metadata -->
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="NFC-F Observe Mode SENSF_RES Injection PoC" />
        <meta-data
            android:name="xposedminversion"
            android:value="82" />
        
        <!-- LSPosed Scope - Hook NFC service -->
        <meta-data
            android:name="xposedscope"
            android:resource="@array/xposed_scope" />
    </application>

</manifest>
